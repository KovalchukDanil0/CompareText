{
  "manifest_version": 3,
  "name": "Compare Text",
  "description": "This extension allows you to compare / diff text just in your browser!",
  "version": "1.1",
  "author": "Gomofob",
  "homepage_url": "https://github.com/KovalchukDanil0/CompareText",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Click to open popup",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "contextMenus"]
}
